{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,  // Set to true for module compatibility
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",  // Ensure proper path resolution for alias
    "paths": {
      "@/*": ["src/*"]  // Support for absolute imports starting with "@/"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]  // Exclude unnecessary directories
}
